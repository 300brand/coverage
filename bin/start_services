#!/bin/bash
SERVICES="service-StorageReader service-StorageWriter service-Publication service-Feed service-Queue server-jsonrpc"
ARGS=$*

declare -a PIDS

trap on_sigint SIGINT

function on_sigint() {
	echo "SIGINT caught"
	PID=${PIDS[$((${#PIDS[@]}-1))]}
	echo ALL PIDS: ${PIDS[@]}
	echo KILLING:  $PID
	kill  $PID
	sleep 1
	unset PIDS
	start_services $SERVICES
}

function start_services() {
	for S in $*; do
		local N=${#PIDS[*]}
		local CMD="$S $ARGS"
		echo "Starting $CMD"
		$CMD &
		PID=$!
		echo "Started with pid: $PID"
		PIDS[$N]=$PID
		sleep 1
	done
}

start_services $SERVICES

while [[ true ]]; do
	sleep 1
done
